ion-side-menus(enable-menu-with-back-views='false')
  ion-side-menu-content
    ion-nav-bar.bar-stable
      ion-nav-back-button

      ion-nav-buttons(side='left')
        button.button.button-icon.button-clear.ion-navicon(menu-toggle='left')

    ion-nav-view(name='menuContent')

  ion-side-menu(side='left')
    ion-header-bar.bar-stable
    ion-content
      ion-list
        ion-item.item-icon-left(nav-clear menu-close href='#/app/groups')
          i.icon.ion-headphone
          p Groups
        ion-item.item-icon-left(nav-clear menu-close href='#/app/settings')
          i.icon.ion-gear-b
          p Settings

        ion-item.item.item-divider Active Groups
        ion-item(nav-clear menu-close ng-repeat='group in groups' href='#/app/groups/{{group.name}}')
          {{group.name}}